
@{
    ViewData["Title"] = "Message Sent";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center">
                        Thank You!
                    </h1>
                    <h3 class="text-center">
                        We will get back to you shortly
                    </h3>
                </div>
                <div class="row">
                    <div class="col-md-6 text-right">
                        <a asp-controller="Contact" asp-action="SendMessage" style="text-decoration: none">
                            <input class="btn btn-success" value="Go Back">
                        </a>
                    </div>
                    <div class="col-md-6 text-left">
                        <a asp-controller="Home" asp-action="Index" style="text-decoration: none">
                            <input class="btn btn-success" value="Go Home">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
