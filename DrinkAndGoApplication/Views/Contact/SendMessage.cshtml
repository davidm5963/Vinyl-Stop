@model ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<h1 class="text-center">Contact Us</h1>
<div class="container-fluid">
<form class="form-horizontal col-lg-offset-2" asp-controller="Contact" asp-action="SendMessage" method="post">
    <fieldset>
        <div class="form-group" id="form">
            <label class="control-label col-sm-2">Name</label>
            <div class="col-sm-6">
                <input asp-for="Name" type="text" class="form-control" autocomplete="Name" placeholder="Your first and last name" required>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Email</label>
            <div class="col-sm-6">
                <input asp-for="UserEmail" type="email" class="form-control" autocomplete="Email" placeholder="Enter your email" required>
                <span class="text-danger" asp-validation-for="UserEmail"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Subject</label>
            <div class="col-sm-6">
                <input asp-for="Subject" type="text" class="form-control" autocomplete="off" placeholder="Subject">
                <span class="text-danger" asp-validation-for="Subject"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Message</label>
            <div class="col-sm-6">
                <textarea asp-for="Message" class="form-control col-sm-10" rows="4" required></textarea>
                <span class="text-danger" asp-validation-for="Message"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <br>
                <input type="submit" value="Send Message" id="form-button" class="btn btn-default">
            </div>
        </div>

    </fieldset>
</form>
</div>