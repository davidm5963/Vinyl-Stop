@model Album
    <a href="@Url.Action("AlbumDetails", "Album", new { id = Model.AlbumId })">
        <img class="thumbnail-image" src="@Model.ImageUrl">
        <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text"><strong>@Model.Name</strong></h2>
            <div class="mdl-layout-spacer"></div>
            <h2 class="mdl-card__title-text">@Model.Price.ToString("c")</h2>
        </div>
        <div class="mdl-card__supporting-text">
            @Model.Artist
        </div>
    </a>
    <div class="mdl-card__actions">

        <form class="text-right" asp-action="AddAlbumToCart" asp-controller="ShoppingCart" asp-route-albumId="@Model.AlbumId" asp-route-albumAmount="1" method="post">
            @await Component.InvokeAsync("AddToCartButton", Model.InStock)
        </form>
        </a>
    </div>

