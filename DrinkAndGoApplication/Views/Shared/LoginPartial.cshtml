@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{

<a class="mdl-navigation__link " asp-action="MyAccount" asp-controller="Account"><i class="material-icons">person</i>My Account</a>
    
    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
          method="post" class="navbar-right">
            <a class="mdl-navigation__link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
    </form>

}
else
{
        <a class="mdl-navigation__link" asp-controller="Account" asp-action="Register"> Register </a>
        <a class="mdl-navigation__link" asp-controller="Account" asp-action="Login"> Log in </a>
}